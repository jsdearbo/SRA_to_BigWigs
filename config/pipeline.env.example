# Copy this file to config/pipeline.env and adjust the values for your environment.
# Paths may be absolute or relative to the repository root.

# Metadata and input locations
METADATA_FILE="metadata.csv"
SRA_OUTPUT_DIR="sra_files"
SRA_SOURCE_DIR="sra_files"

# Output layout
BASE_DIR="results"

# Tool configuration
STAR_EXEC="/path/to/STAR"
STAR_INDEX="/path/to/star/index"
TRIMMOMATIC_EXEC="/path/to/trimmomatic"
ADAPTERS="/path/to/adapters/TruSeq3-PE.fa"
SAMTOOLS_BIN="samtools"
BAMCOVERAGE_BIN="bamCoverage"
FASTERQ_DUMP_BIN="fasterq-dump"

# Resource tuning
ALIGN_THREADS=6
IO_THREADS=4
STAR_OVERHANG=100
EFFECTIVE_GENOME_SIZE=2652783500
BW_BIN_SIZE=10
BW_NORMALIZATION=CPM

# Optional extra flags (space-separated)
STAR_EXTRA_ARGS=""
BAMCOVERAGE_EXTRA_ARGS=""
TRIMMOMATIC_EXTRA_ARGS=""

# Retain per-sample temporary folders (0 = remove, 1 = keep)
KEEP_TMP=0

# Example Java heap override for Trimmomatic
_JAVA_OPTIONS="-Xmx8G"
